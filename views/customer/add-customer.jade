extends ../layout/base
block content
    section.content-header
        h1
            | Add Member
            small it all starts here
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    | Level
                li.active Here
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Member
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/customers/add' enctype="multipart/form-data")
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Nama
                                    input(type='text',name='nama',placeholder='Enter Nama', autofocus).form-control
                                .form-group
                                    label
                                        | Alamat
                                    input(type='text',name='alamat',placeholder='Enter alamat').form-control
                                .form-group
                                    label
                                        | No HP
                                    input(type='text',name='no_hp',placeholder='Enter No Hp').form-control
                                .form-group
                                    label
                                        | Tanggal Masuk
                                    input(type='text',name='tanggal_masuk',placeholder='Enter tanggal').form-control
                                .form-group
                                    label
                                        | Gambar
                                    input(type='file',name='gambar').form-control
                                .box-footer
                                button(type='submit').btn.btn-primary
                                    | Submit

                                a(href='/customers').btn.btn-primary.pull-right
                                    | Back